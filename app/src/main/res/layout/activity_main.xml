<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="put your username"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_int_chace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="internal_cache"
        android:text="internal cache" />

    <Button
        android:id="@+id/btn_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="external_cache"
        android:text="external cache" />

    <Button
        android:id="@+id/btn_external_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="external_private"
        android:text="external private " />

    <Button
        android:id="@+id/btn_external_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="external_public"
        android:text="external public" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:text="next" />

</LinearLayout>